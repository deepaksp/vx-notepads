{
    "name": "vx-notepads",
    "displayName": "VX Notepads",
    "description": "A simple note taking extension, save - ideas, snippets, and inspirations as you code. Because every great project starts with a single note.",
    "version": "1.0.3",
    "publisher": "DeepakPujari",
    "repository": {
        "type": "git",
        "url": "https://github.com/deepaksp/vx-notepads"
    },
    "engines": {
        "vscode": "^1.75.0"
    },
    "icon": "resources/icon.png",
    "categories": [
        "Other"
    ],
    "keywords": [
        "notes",
        "developer",
        "productivity",
        "notepad",
        "quick notes",
        "vscode",
        "coding notes"
    ],
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "notepads",
                    "title": "VX Notepads",
                    "icon": "resources/notepads-icon.png"
                }
            ]
        },
        "views": {
            "notepads": [
                {
                    "id": "notepads",
                    "name": "Notes",
                    "type": "tree",
                    "visibility": "collapsed"
                }
            ]
        },
        "commands": [
            {
                "command": "notepads.addNote",
                "title": "Add Note",
                "icon": "$(add)"
            },
            {
                "command": "notepads.openNote",
                "title": "Open Note"
            },
            {
                "command": "notepads.deleteNote",
                "title": "Delete Note",
                "icon": "$(trash)"
            },
            {
                "command": "notepads.renameNote",
                "title": "Rename Note",
                "icon": "$(edit)"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "notepads.addNote",
                    "when": "view == notepads",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "notepads.renameNote",
                    "when": "view == notepads && viewItem == note",
                    "group": "inline"
                },
                {
                    "command": "notepads.deleteNote",
                    "when": "view == notepads && viewItem == note",
                    "group": "inline"
                }
            ]
        }
    },
    "activationEvents": [
        "onView:notepads"
    ],
    "main": "./extension.js",
    "devDependencies": {
        "@types/vscode": "^1.75.0"
    }
}